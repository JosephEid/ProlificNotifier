{
  "name": "Prolific Notifier",
  "description": "Notifies you when a new study becomes available.",
  "version": "1.0",
  "browser_action": {
    "default_icon": {
      "16": "images/cc16.png",
      "32": "images/cc32.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/cc16.png",
    "48": "images/cc48.png",
    "32": "images/cc32.png",
    "128": "images/cc128.png"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "https://app.prolific.co/*",
    "storage",
    "declarativeContent"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["style.css"],
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["content_script.js"],
      "matches": ["https://app.prolific.co/*"],
      "run_at": "document_idle"
    }
  ]
}
